<div class="w-1/2 mx-auto flex flex-col gap-2">
  <div>
    <h1 class="text-4xl w-1/2 mx-auto py-2">ARTICLES</h1>
    <% if @code == "ms" %>
        <%= link_to "ENGLISH", "/articles/index/en"  %>
    <% else %>
        <%= link_to "BAHASA MELAYU", "/articles/index/ms"%>
    <% end %>
  </div>
  <% @articles.each do |article| %>
    <div class="border border-blue-900 p-3 rounded-md">
      <%= link_to article.title, article.article_link, target: "_blank", class: "hover:underline hover:text-blue-500" %>
      <p><%= article.publisher.name %></p>
      <p><%= article.category.name %></p>
      <p><%= article.published_date.strftime("%-l:%M%p, %d %B %Y") %></p>
      <p><%= article.published_date %></p>
    </div>
  <% end %>
</div>